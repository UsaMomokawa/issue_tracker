<div class="login">
  <%= form_with model: @user, url: :login, local: true, class: 'form form--narrow' do |form| %>
    <div class="form__field">
      <%= form.label :username, class: 'form__label' %>
      <%= form.text_field :username, class: 'form__text' %>
    </div>
    <div class="form__field">
      <%= form.label :password, class: 'form__label' %>
      <%= form.password_field :password, class: 'form__text' %>
    </div>
    <div class="form__actions">
      <%= form.button t(:'helpers.submit.user.login'), class: 'button' %>
    </div>
  <% end %>
</div>
